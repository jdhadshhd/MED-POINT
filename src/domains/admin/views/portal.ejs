                const btn = document.getElementById('saveTicketBtn');
                setLoading(btn, true);
                try {
                    if (id) {
                        const updated = await api.updateTicket(parseInt(id), data);
                        const idx = store.tickets.findIndex(t => t.id === parseInt(id));
                        if (idx !== -1) store.tickets[idx] = updated;
                        showNotification('Ticket updated', 'success');
                    } else {
                        const newTicket = await api.createTicket(data);
                        store.tickets.unshift(newTicket);
                        showNotification('Ticket created', 'success');
