                    closeTicketModal();
                    renderTickets();
                    renderSupportStats();
                } catch (err) {
                    showNotification('Error saving ticket', 'error');
                } finally {
                    setLoading(btn, false);
                }
            }

            async function sendReply() {
                const ticketId = parseInt(document.getElementById('replyTicketId').value);
                const message = document.getElementById('replyMessage').value.trim();
                const status = document.getElementById('replyStatus').value;
                const internalNotes = document.getElementById('internalNotes').value.trim();
                if (!message) {
                    showNotification('Please enter a reply', 'warning');
                    return;
                }
                const btn = document.getElementById('sendReplyBtn');
                setLoading(btn, true);
                try {
                    await api.addReply(ticketId, {
                        message,
                        author: 'Admin',
                        internal: false
                    });
                    if (internalNotes) {
                        await api.addReply(ticketId, {
                            message: internalNotes,
                            author: 'Admin',
                            internal: true
                        });
                    }
                    if (status) {
                        await api.updateTicket(ticketId, { status });
                        const ticket = store.tickets.find(t => t.id === ticketId);
                        if (ticket) ticket.status = status;
                    }
                    closeReplyModal();
                    renderTickets();
                    renderSupportStats();
                    showNotification('Reply sent', 'success');
                } catch (err) {
                    showNotification('Failed to send reply', 'error');
                } finally {
                    setLoading(btn, false);
                }
            }

