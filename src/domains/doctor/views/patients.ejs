<!-- Doctor Patients List -->
<div class="page-header">
  <div class="page-title">
    <h2><i class="fas fa-users"></i> My Patients</h2>
    <p>Patients under your care</p>
  </div>
</div>

<div class="dashboard-card">
  <% if (patients.length === 0) { %>
  <div class="empty-state" style="text-align: center; padding: 60px;">
    <i class="fas fa-users-slash" style="font-size: 64px; color: #ccc; margin-bottom: 20px;"></i>
    <h3 style="color: var(--Paraghfont); margin-bottom: 10px;">No Patients Yet</h3>
    <p style="color: #888;">You don't have any patients under your care yet.</p>
  </div>
  <% } else { %>
  <div class="patients-grid">
    <% patients.forEach(function(patient) { %>
    <div class="patient-card">
      <div class="patient-avatar">
        <%= patient.name.charAt(0).toUpperCase() %>
      </div>
      <div class="patient-info">
        <h4><%= patient.name %></h4>
        <p><i class="fas fa-envelope"></i> <%= patient.email %></p>
        <p><i class="fas fa-phone"></i> <%= patient.patientProfile?.phone || 'N/A' %></p>
        <% if (patient.patientProfile?.dateOfBirth) { %>
        <p><i class="fas fa-birthday-cake"></i> <%= new Date(patient.patientProfile.dateOfBirth).toLocaleDateString() %></p>
        <% } %>
      </div>
    </div>
    <% }); %>
  </div>
  <% } %>
</div>

<style>
.patients-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
  gap: 20px;
}

.patient-card {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 20px;
  background: #f8f9fa;
  border-radius: 12px;
  border-left: 4px solid var(--navcolor);
  transition: var(--transition);
}

.patient-card:hover {
  box-shadow: var(--shadow);
  transform: translateY(-2px);
}

.patient-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--navcolor), var(--spanfonts));
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 24px;
  flex-shrink: 0;
}

.patient-info {
  flex: 1;
}

.patient-info h4 {
  color: var(--Paraghfont);
  margin-bottom: 8px;
  font-size: 18px;
}

.patient-info p {
  color: #666;
  font-size: 14px;
  margin: 5px 0;
}

.patient-info p i {
  width: 18px;
  color: var(--spanfonts);
  margin-right: 8px;
}

@media (max-width: 768px) {
  .patients-grid {
    grid-template-columns: 1fr;
  }
}
</style>
