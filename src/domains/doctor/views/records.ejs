<!-- Doctor Medical Records -->
<div class="page-header">
  <div class="page-title">
    <h2><i class="fas fa-file-medical-alt"></i> Medical Records</h2>
    <p>Create and manage patient medical records</p>
  </div>
</div>

<div class="records-grid">
  <div class="dashboard-card">
    <div class="card-header">
      <div class="card-title">
        <h3><i class="fas fa-plus-circle"></i> Create New Record</h3>
        <p>Add a new medical record</p>
      </div>
    </div>
    
    <form action="/doctor/records" method="POST" style="padding: 20px 0;">
      <div class="form-group">
        <label for="patientId"><i class="fas fa-user"></i> Patient</label>
        <select id="patientId" name="patientId" class="form-control" required>
          <option value="">Select Patient</option>
          <% patients.forEach(function(patient) { %>
          <option value="<%= patient.id %>"><%= patient.name %></option>
          <% }); %>
        </select>
      </div>
      
      <div class="form-group">
        <label for="notes"><i class="fas fa-notes-medical"></i> Medical Notes</label>
        <textarea id="notes" name="notes" class="form-control" rows="4" required
                  placeholder="Enter medical notes, diagnosis, and treatment details..."></textarea>
      </div>
      
      <div class="form-row">
        <div class="form-group">
          <label for="muacValue"><i class="fas fa-ruler"></i> MUAC Value (cm)</label>
          <input type="number" id="muacValue" name="muacValue" class="form-control" 
                 step="0.1" min="0" placeholder="e.g., 25.5">
        </div>
        
        <div class="form-group">
          <label for="muacStatus"><i class="fas fa-chart-bar"></i> MUAC Status</label>
          <select id="muacStatus" name="muacStatus" class="form-control">
            <option value="">Select Status</option>
            <option value="GREEN">Green (Normal)</option>
            <option value="YELLOW">Yellow (Moderate)</option>
            <option value="RED">Red (Severe)</option>
          </select>
        </div>
      </div>
      
      <button type="submit" class="btn btn-primary" style="width: 100%;">
        <i class="fas fa-save"></i> Create Record
      </button>
    </form>
  </div>
  
  <div class="dashboard-card">
    <div class="card-header">
      <div class="card-title">
        <h3><i class="fas fa-history"></i> Recent Records</h3>
        <p>Latest medical records</p>
      </div>
    </div>
    
    <% if (records.length === 0) { %>
    <div class="empty-state" style="text-align: center; padding: 60px;">
      <i class="fas fa-file-medical" style="font-size: 48px; color: #ccc; margin-bottom: 15px;"></i>
      <h3 style="color: var(--Paraghfont);">No Records</h3>
      <p style="color: #888;">You haven't created any medical records yet.</p>
    </div>
    <% } else { %>
    <div class="records-list">
      <% records.slice(0, 10).forEach(function(record) { %>
      <div class="record-item">
        <div class="record-header">
          <div class="record-patient">
            <span class="record-avatar"><%= record.patient.name.charAt(0).toUpperCase() %></span>
            <strong><%= record.patient.name %></strong>
          </div>
          <span class="record-date"><i class="fas fa-clock"></i> <%= new Date(record.createdAt).toLocaleDateString() %></span>
        </div>
        <p class="record-notes"><%= record.notes.substring(0, 100) %><%= record.notes.length > 100 ? '...' : '' %></p>
        <% if (record.muacStatus) { %>
        <span class="muac-badge muac-<%= record.muacStatus.toLowerCase() %>">
          <i class="fas fa-ruler"></i> MUAC: <%= record.muacValue %> cm (<%= record.muacStatus %>)
        </span>
        <% } %>
      </div>
      <% }); %>
    </div>
    <% } %>
  </div>
</div>

<style>
.records-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 25px;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
}

.form-group label i {
  margin-right: 8px;
  color: var(--spanfonts);
}

.records-list {
  max-height: 500px;
  overflow-y: auto;
  padding-top: 10px;
}

.record-item {
  padding: 15px;
  margin-bottom: 10px;
  background: #f8f9fa;
  border-radius: 10px;
  border-left: 3px solid var(--navcolor);
}

.record-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.record-patient {
  display: flex;
  align-items: center;
  gap: 10px;
}

.record-avatar {
  width: 32px;
  height: 32px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--navcolor), var(--spanfonts));
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 14px;
}

.record-date {
  font-size: 13px;
  color: #888;
}

.record-date i {
  margin-right: 5px;
}

.record-notes {
  color: #666;
  margin: 10px 0;
  line-height: 1.5;
}

.muac-badge {
  display: inline-flex;
  align-items: center;
  gap: 5px;
  padding: 5px 12px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: 500;
}

.muac-green {
  background: rgba(40, 167, 69, 0.1);
  color: #28a745;
}

.muac-yellow {
  background: rgba(255, 193, 7, 0.1);
  color: #ffc107;
}

.muac-red {
  background: rgba(220, 53, 69, 0.1);
  color: #dc3545;
}

@media (max-width: 768px) {
  .records-grid {
    grid-template-columns: 1fr;
  }
  
  .form-row {
    grid-template-columns: 1fr;
  }
}
</style>
