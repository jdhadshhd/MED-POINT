            const bmiStatusEl = document.getElementById('bmiStatus');
            const bmiLastMeasuredEl = document.getElementById('bmiLastMeasured');
            const bmiAlertTextEl = document.getElementById('bmiAlertText');
            
            if (bmiValueEl && measurement.bmi) {
                bmiValueEl.textContent = measurement.bmi;
            }
            if (bmiStatusEl && measurement.bmi) {
                let statusText, statusClass;
                if (measurement.bmi < 18.5) {
                    statusText = 'UNDERWEIGHT';
                    statusClass = 'status-yellow';
                } else if (measurement.bmi < 25) {
                    statusText = 'NORMAL';
                    statusClass = 'status-green';
                } else if (measurement.bmi < 30) {
                    statusText = 'OVERWEIGHT';
                    statusClass = 'status-yellow';
                } else {
                    statusText = 'OBESE';
                    statusClass = 'status-red';
                }
                bmiStatusEl.textContent = statusText;
                bmiStatusEl.className = `muac-status ${statusClass}`;
            }
            if (bmiLastMeasuredEl && measurement.createdAt) {
                const date = new Date(measurement.createdAt);
                const now = new Date();
                const diffDays = Math.floor((now - date) / (1000 * 60 * 60 * 24));
                const timeAgo = diffDays === 0 ? 'today' : 
                               diffDays === 1 ? 'yesterday' : 
                               `${diffDays} days ago`;
                bmiLastMeasuredEl.textContent = `Last calculated: ${timeAgo}`;
            }
            if (bmiAlertTextEl && measurement.bmi) {
                if (measurement.bmi < 18.5) {
                    bmiAlertTextEl.textContent = 'BMI below 18.5 indicates underweight';
                } else if (measurement.bmi < 25) {
                    bmiAlertTextEl.textContent = 'BMI is within healthy range';
                } else if (measurement.bmi < 30) {
                    bmiAlertTextEl.textContent = 'BMI above 25 indicates overweight';
                } else {
                    bmiAlertTextEl.textContent = 'BMI above 30 indicates obesity';
                }
            }
        }

