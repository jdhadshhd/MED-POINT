            const muacStatusEl = document.getElementById('muacStatus');
            const muacLastMeasuredEl = document.getElementById('muacLastMeasured');
            const muacAlertTextEl = document.getElementById('muacAlertText');
            
            if (muacValueEl) {
                muacValueEl.textContent = `${measurement.muacValue} cm`;
            }
            if (muacStatusEl) {
                const statusText = measurement.muacStatus === 'RED' ? 'CRITICAL' : 
                                   measurement.muacStatus === 'YELLOW' ? 'AT RISK' : 'NORMAL';
                muacStatusEl.textContent = statusText;
                muacStatusEl.className = `muac-status status-${measurement.muacStatus.toLowerCase()}`;
            }
            if (muacLastMeasuredEl && measurement.createdAt) {
                const date = new Date(measurement.createdAt);
                const now = new Date();
                const diffDays = Math.floor((now - date) / (1000 * 60 * 60 * 24));
                const timeAgo = diffDays === 0 ? 'today' : 
                               diffDays === 1 ? 'yesterday' : 
                               `${diffDays} days ago`;
                muacLastMeasuredEl.textContent = `Last measured: ${timeAgo}`;
            }
            if (muacAlertTextEl) {
                if (measurement.muacStatus === 'RED') {
                    muacAlertTextEl.textContent = 'MUAC below 11.5cm indicates severe acute malnutrition';
                } else if (measurement.muacStatus === 'YELLOW') {
                    muacAlertTextEl.textContent = 'MUAC between 11.5-12.5cm indicates moderate malnutrition';
                } else {
                    muacAlertTextEl.textContent = 'MUAC above 12.5cm - Normal nutritional status';
                }
            }
            
            // Update BMI display
