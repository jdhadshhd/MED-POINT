<!-- Patient Profile -->
<div class="page-header">
  <div class="page-title">
    <h2><i class="fas fa-user-circle"></i> My Profile</h2>
    <p>View and update your account information</p>
  </div>
</div>

<div class="profile-grid">
  <div class="dashboard-card">
    <div class="card-header">
      <div class="card-title">
        <h3><i class="fas fa-id-card"></i> Account Information</h3>
        <p>Your basic account details</p>
      </div>
    </div>
    
    <div class="profile-info">
      <div class="profile-avatar">
        <%= user.name.charAt(0).toUpperCase() %>
      </div>
      <div class="info-row">
        <span class="info-label"><i class="fas fa-user"></i> Name</span>
        <span class="info-value"><%= user.name %></span>
      </div>
      <div class="info-row">
        <span class="info-label"><i class="fas fa-envelope"></i> Email</span>
        <span class="info-value"><%= user.email %></span>
      </div>
      <div class="info-row">
        <span class="info-label"><i class="fas fa-user-tag"></i> Role</span>
        <span class="status-badge status-completed">PATIENT</span>
      </div>
    </div>
  </div>
  
  <div class="dashboard-card">
    <div class="card-header">
      <div class="card-title">
        <h3><i class="fas fa-edit"></i> Profile Details</h3>
        <p>Update your contact information</p>
      </div>
    </div>
    
    <form action="/patient/profile" method="POST" style="padding: 20px 0;">
      <div class="form-group">
        <label for="phone"><i class="fas fa-phone"></i> Phone Number</label>
        <input type="tel" id="phone" name="phone" class="form-control"
               value="<%= profile?.phone || '' %>" placeholder="+1234567890">
      </div>
      
      <div class="form-group">
        <label for="dateOfBirth"><i class="fas fa-calendar"></i> Date of Birth</label>
        <input type="date" id="dateOfBirth" name="dateOfBirth" class="form-control"
               value="<%= profile?.dateOfBirth ? new Date(profile.dateOfBirth).toISOString().split('T')[0] : '' %>">
      </div>
      
      <button type="submit" class="btn btn-primary" style="width: 100%;">
        <i class="fas fa-save"></i> Update Profile
      </button>
    </form>
  </div>
</div>

<style>
.profile-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 25px;
}

.profile-info {
  padding: 20px 0;
}

.profile-avatar {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background: linear-gradient(135deg, var(--navcolor), var(--spanfonts));
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-weight: 600;
  font-size: 36px;
  margin: 0 auto 25px auto;
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15px;
  background: #f8f9fa;
  border-radius: 10px;
  margin-bottom: 10px;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  font-weight: 500;
  color: #666;
}

.info-label i {
  margin-right: 10px;
  color: var(--spanfonts);
}

.info-value {
  color: var(--Paraghfont);
  font-weight: 500;
}

.form-group label i {
  margin-right: 8px;
  color: var(--spanfonts);
}

@media (max-width: 768px) {
  .profile-grid {
    grid-template-columns: 1fr;
  }
}
</style>
