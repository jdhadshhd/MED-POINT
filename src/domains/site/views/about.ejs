            display: flex;
            justify-content: space-around;
            flex-wrap: wrap;
            gap: 30px;
        }

        .footer-column h4 {
            color: var(--fontAtNav);
            font-size: 18px;
            margin-bottom: 20px;
        }

        .footer-column ul {
            list-style: none;
        }

        .footer-column ul li {
            margin-bottom: 10px;
        }

        .footer-column ul li a {
            color: rgba(228, 228, 228, 0.8);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .footer-column ul li a:hover {
            color: var(--fontAtNav);
        }

        .social-icons {
            display: flex;
            gap: 15px;
            margin-top: 20px;
        }

        .social-icons a {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background-color: rgba(228, 228, 228, 0.1);
            border-radius: 50%;
            color: var(--fontAtNav);
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .social-icons a:hover {
            background-color: var(--fontAtNav);
            color: var(--navcolor);
            transform: translateY(-3px);
        }

        .copyright {
            text-align: center;
            padding-top: 20px;
            border-top: 1px solid rgba(228, 228, 228, 0.2);
            color: rgba(228, 228, 228, 0.8);
            font-size: 14px;
        }

        /* Responsive Design */
        @media (max-width: 992px) {
            .story-content {
                flex-direction: column;
            }
            
            .about-hero h1 {
                font-size: 40px;
            }
            
            .mission-card, .vision-card {
                padding: 30px;
            }
        }

        @media (max-width: 768px) {
            .headNav {
                flex-direction: column;
                gap: 15px;
            }
            
            nav {
                flex-direction: column;
                height: auto;
                padding: 20px;
                gap: 20px;
            }
            
            .menu ul {
                flex-direction: column;
                gap: 15px;
            }
            
            .about-hero {
                padding: 70px 0;
            }
            
            .about-hero h1 {
                font-size: 32px;
            }
            
            .footer-content {
                flex-direction: column;
            }
        }

        @media (max-width: 480px) {
            .container {
                width: 95%;
            }
            
            .about-hero h1 {
                font-size: 28px;
            }
            
            .mission-card, .vision-card, .value-card {
                padding: 20px;
            }
        }
    </style>
